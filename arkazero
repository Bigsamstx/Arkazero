                        <span id="stxDisplay" class="font-mono text-sky-400">1000 STX</span>
                    </div>
                    <input type="range" min="100" max="10000" step="100" value="1000" class="w-full h-2 bg-slate-700 rounded-lg appearance-none slider-thumb" oninput="updateValues()" id="stxInput">
                </div>

                <div>
                    <div class="flex justify-between mb-2">
                        <label class="text-sm font-semibold text-slate-300">Loan to Value</label>
                        <span id="ltvDisplay" class="font-mono text-indigo-400">25% (Safe)</span>
                    </div>
                    <input type="range" min="1" max="40" step="1" value="25" class="w-full h-2 bg-slate-700 rounded-lg appearance-none slider-thumb" oninput="updateValues()" id="ltvInput">
                </div>

                <div>
                    <div class="flex justify-between mb-2">
                        <label class="text-sm font-semibold text-slate-300">Farming APY</label>
                        <span id="apyDisplay" class="font-mono text-green-400">20%</span>
                    </div>
                    <input type="range" min="5" max="100" step="1" value="20" class="w-full h-2 bg-slate-700 rounded-lg appearance-none slider-thumb" oninput="updateValues()" id="apyInput">
                    <p class="text-xs text-slate-500 mt-2">Based on current DIKO/USDA Farm rates.</p>
                </div>

