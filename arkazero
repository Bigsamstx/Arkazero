    <script>
        const STX_PRICE = 2.00; // Mock Oracle Price

        function updateValues() {
            // 1. Get Inputs
            const stxAmount = parseFloat(document.getElementById('stxInput').value);
            const ltv = parseFloat(document.getElementById('ltvInput').value);
            const apy = parseFloat(document.getElementById('apyInput').value);

            // 2. Calculate Financials
            const collateralValue = stxAmount * STX_PRICE;
            const debt = collateralValue * (ltv / 100);
            
            // Annual Yield = Debt (invested in farm) * APY
            // Note: Assuming we put the borrowed USDA into the farm
            const annualYield = debt * (apy / 100);
            const monthlyYield = annualYield / 12;

            // Time to pay off = Debt / Annual Yield
            // Simplified (ignoring compounding for clarity of demo)
            let yearsToFreedom = debt / annualYield;
            if (!isFinite(yearsToFreedom)) yearsToFreedom = 0;

            // 3. Update Text UI
            document.getElementById('stxDisplay').innerText = `${stxAmount.toLocaleString()} STX`;
            document.getElementById('ltvDisplay').innerText = `${ltv}%`;
            document.getElementById('apyDisplay').innerText = `${apy}%`;
            
            document.getElementById('debtDisplay').innerText = `$${debt.toLocaleString(undefined, {maximumFractionDigits:0})}`;
            document.getElementById('yieldDisplay').innerText = `+$${monthlyYield.toLocaleString(undefined, {maximumFractionDigits:2})}`;
            document.getElementById('yearsDisplay').innerText = yearsToFreedom.toFixed(1);

            // 4. Update Chart (Visualizing Debt Reduction)
            const chart = document.getElementById('chart');
            chart.innerHTML = ''; // Clear previous
            
            // Create 5 bars representing progress over time
            for (let i = 0; i < 6; i++) {
                const bar = document.createElement('div');
                bar.className = 'chart-bar';
                bar.style.left = `${i * 18}%`;
                
                // Height represents Debt Remaining
                // Start at 80% height, go down to 0%
                const percentageRemaining = 1 - (i / 5); 
                bar.style.height = `${percentageRemaining * 80}%`;
                
                // Color shift
                if(i === 5) {
                    bar.style.background = '#4ade80'; // Green at the end
                    bar.style.height = '10px'; // Small bump to show "Free"
                }

                chart.appendChild(bar);
            }
        }

        // Init
        updateValues();
    </script>
